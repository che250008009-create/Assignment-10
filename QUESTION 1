#include <iostream>
#include <string>
using namespace std;

struct Item {
    int id;
    string name;
    float cost;
};

int main() {
    Item items[8];
    float totalCost = 0;

    cout << "Enter details of 8 items:\n";
    for (int i = 0; i <= 7; i++) {
        cout << "\nItem " << i + 1 << " details:\n";
        cout << "Enter ID: ";
        cin >> items[i].id;
        cout << "Enter Name: ";
        cin >> items[i].name;
        cout << "Enter Cost: ";
        cin >> items[i].cost;
        totalCost += items[i].cost;
    }

    
    for (int i = 0; i < 7; i++) {
        for (int j = i + 1; j < 8; j++) {
            if (items[i].cost < items[j].cost) {
                Item temp = items[i];
                items[i] = items[j];
                items[j] = temp;
            }
        }
    }

    
    cout << "\nItems sorted in descending order of cost:\n";
    cout << "ID\tName\tCost\n";
    for (int i = 0; i < 8; i++) {
        cout << items[i].id << "\t" << items[i].name << "\t" << items[i].cost << endl;
    }

    
    float averageCost = totalCost / 8;
    cout << "\nAverage Cost of all items: " << averageCost << endl;

    return 0;
}
	
