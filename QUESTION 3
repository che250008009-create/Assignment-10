#include <iostream>
#include <string>
using namespace std;


struct Employee {
    int id;
    string name;
    float salary;
};

int main() {
    Employee emp[10];
    int n = 10;

    cout << "Enter details for 10 employees:\n";
    for (int i = 0; i < n; i++) {
        cout << "\nEmployee " << i + 1 << ":\n";
        cout << "Enter ID: ";
        cin >> emp[i].id;
        cin.ignore(); 

        cout << "Enter Name: ";
        getline(cin, emp[i].name);

        cout << "Enter Salary: ";
        cin >> emp[i].salary;
    }

    int choice;
    do {
        cout << "\n===== Employee Management Menu =====\n";
        cout << "1. Display all employee details\n";
        cout << "2. Search for an employee by ID\n";
        cout << "3. Increase salary of employees earning less than ₹30,000 by 10%\n";
        cout << "4. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;

        switch (choice) {
        case 1:
            cout << "\n--- All Employee Details ---\n";
            for (int i = 0; i < n; i++) {
                cout << "\nID: " << emp[i].id;
                cout << "\nName: " << emp[i].name;
                cout << "\nSalary: ₹" << emp[i].salary << endl;
            }
            break;

        case 2: {
            int searchId;
            bool found = false;
            cout << "\nEnter Employee ID to search: ";
            cin >> searchId;
            for (int i = 0; i < n; i++) {
                if (emp[i].id == searchId) {
                    cout << "\nEmployee Found:\n";
                    cout << "ID: " << emp[i].id << endl;
                    cout << "Name: " << emp[i].name << endl;
                    cout << "Salary: ₹" << emp[i].salary << endl;
                    found = true;
                    break;
                }
            }
            if (!found)
                cout << "Employee with ID " << searchId << " not found.\n";
            break;
        }

        case 3:
            cout << "\nUpdating salaries for employees earning less than ₹30,000...\n";
            for (int i = 0; i < n; i++) {
                if (emp[i].salary < 30000) {
                    emp[i].salary += emp[i].salary * 0.10; 
                }
            }
            cout << "Salaries updated successfully!\n";
            break;

        case 4:
            cout << "Exiting program. Goodbye!\n";
            break;

        default:
            cout << "Invalid choice! Please try again.\n";
        }

    } while (choice != 4);

    return 0;
}
	
